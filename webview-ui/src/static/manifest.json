{
  "manifest_version": 3,
  "name": "BenchWrk",
  "version": "1.0.5",
  "permissions": ["storage", "sidePanel"],
  "description": "Get all logs in one dashboard",
  "icons": {
    "48": "src/static/icons/icon48.png",
    "128": "src/static/icons/icon128.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "src/assets/js/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.tsx"]
    },
    {
      "matches": ["<all_urls>"],
      "js": ["src/assets/js/initializeUI.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["*.html", "*.css", "*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
